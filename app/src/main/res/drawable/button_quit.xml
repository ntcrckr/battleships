<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorButtonQuitPressed" />
            <stroke
                android:width="3dp"
                android:color="@color/colorStroke" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/colorButtonQuit" />
            <stroke
                android:width="3dp"
                android:color="@color/colorStroke" />
        </shape>
    </item>
</selector>